<div class="flex justify-center items-center py-12 w-full h-fit min-h-full">
  <%= image_tag "koncert.jpg", alt: "concert background", class: "bottom-0 -z-10 fixed w-full min-h-full object-cover aspect-video" %>

  <div class="bg-white shadow-2xl shadow-neutral-800 p-8 border rounded-sm w-xl max-w-full">
    <div class="text-center">
      <h2 class="mb-0.5 font-bold text-2xl">Create free account</h2>
      <p class="text-gray-600">Discover events in your area. Meet new friends. Have fun!</p>
    </div>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="flex flex-col gap-0.5 my-5">
        <%= f.label :username %>
        <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "rounded-sm border-gray-500 bg-neutral-100 border px-3 py-1 w-full #{resource.errors[:username].any? ? 'border-red-700 border-2' : ''}" %>

        <ul class="text-red-600">
          <% resource.errors.full_messages_for(:username).each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>

      <div class="flex flex-col gap-0.5 my-5">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "rounded-sm border-gray-500 bg-neutral-100 border px-3 py-1 w-full #{resource.errors[:email].any? ? 'border-red-700 border-2' : ''}" %>

        <ul class="text-red-600">
          <% resource.errors.full_messages_for(:email).each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>

      <div class="flex flex-col gap-0.5 my-5">
        <div class="">
          <%= f.label :password %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
        </div>
        <%= f.password_field :password, autocomplete: "new-password", class: "rounded-sm border-gray-500 bg-neutral-100 border px-3 py-1 w-full #{resource.errors[:password].any? ? 'border-red-700 border-2' : ''}" %>

        <ul class="text-red-600">
          <% resource.errors.full_messages_for(:password).each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>

      <div class="flex flex-col gap-0.5 my-5">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "rounded-sm border-gray-500 bg-neutral-100 border px-3 py-1 w-full #{resource.errors[:password_confirmation].any? ? 'border-red-700 border-2' : ''}" %>

        <ul class="text-red-600">
          <% resource.errors.full_messages_for(:password_confirmation).each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>

      <div class="my-4">
        <%= f.submit "Sign up", class: "bg-green-700 px-5 py-1.5 rounded-sm text-neutral-50 cursor-pointer" %>
      </div>
    <% end %>

    <div class="flex flex-col gap-1 text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>