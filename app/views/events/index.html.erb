<% content_for :title, "Events" %>

<%= render layout: "shared/centered_container_wrapper" do %>
  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Events</h1>
    <%= link_to "New event", new_event_path, class: "block bg-green-600 hover:bg-green-500 px-4 py-2 border-[0.5px] border-neutral-500 rounded-md font-medium text-white" %>
  </div>

  <div class="flex bg-gray-50 my-3 border border-gray-400 rounded-md overflow-hidden">
    <%= link_to "Upcoming Events", upcoming_events_path, class: "block px-4 py-2 text-center grow base-1/3 w-1/3 #{"bg-slate-600 text-white font-bold" if current_page?(upcoming_events_path)}" %>
    <%= link_to "Past Events", past_events_path, class: "block px-4 py-2 border-gray-400 border-x text-center grow base-1/3 w-1/3 #{"bg-slate-600 text-white font-bold" if current_page?(past_events_path)}" %>
    <%= link_to "Ongoing Events", ongoing_events_path, class: "block px-4 py-2 text-center grow base-1/3 w-1/3 #{"bg-slate-600 text-white font-bold" if current_page?(ongoing_events_path)}" %>
  </div>

  <div id="events" class="gap-8 sm:gap-4 lg:gap-8 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 mt-4 min-w-full">
    <% if @events.any? %>
      <% @events.each do |event| %>
        <%= render "event_card", event: event %>
      <% end %>
    <% else %>
      <p class="my-10 text-center">No events found.</p>
    <% end %>
  </div>
<% end %>
